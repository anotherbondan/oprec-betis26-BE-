generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Hiker {
  id    String @id @default(uuid()) @db.Uuid
  name  String
  age   Int
  level Level

  permits Permit[]
}

enum Level {
  NEWBIE
  HIKER
  PORTER
  RANGER
}

model Trail {
  id         String     @id @default(uuid()) @db.Uuid
  name       String
  difficulty Difficulty
  openDate   DateTime
  status     Boolean

  permits Permit[]
}

enum Difficulty {
  BEGINNER
  MODERATE
  HARD
  EXTREME
}

model Permit {
  id      String   @id @default(uuid()) @db.Uuid
  tanggal DateTime @db.Date

  hikerId String @db.Uuid
  trailId String @db.Uuid

  hiker Hiker @relation(fields: [hikerId], references: [id])
  trail Trail @relation(fields: [trailId], references: [id])

  @@unique([hikerId, trailId, tanggal])
}
